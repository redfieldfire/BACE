<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/1.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Classes.DocumentoModificar">
   <children>
      <VBox alignment="CENTER" minHeight="70.0" minWidth="185.0" styleClass="backgroundWhite" stylesheets="@../Style/styles.css">
         <children>
            <Button fx:id="buttonDocumento" minHeight="60.0" minWidth="176.0" mnemonicParsing="false" onAction="#actionDocumento" text="Nombre">
               <font>
                  <Font name="Microsoft YaHei Light" size="20.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="47.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/pdf.png" />
                     </image>
                  </ImageView>
               </graphic>
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.3700000047683716" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="50.0" styleClass="backgroundWhite" stylesheets="@../Style/styles.css">
         <children>
            <Button fx:id="buttonBorrar" minHeight="60.0" mnemonicParsing="false" onAction="#actionBorrar" text="X">
               <font>
                  <Font name="Microsoft YaHei Light" size="20.0" />
               </font>
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.3700000047683716" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
